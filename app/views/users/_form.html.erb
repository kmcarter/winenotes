<%= form_for @user do |f| %>
  <div class="row">
    <%= render 'shared/errors', object: @user %>
    <fieldset>
      <div class="small-6 columns">
        <div class="field">
          <%= f.label :name %>
          <%= f.text_field :name %>
        </div>
        <div class="field">
          <%= f.label :email %>
          <%= f.email_field :email %>
        </div>
      </div>
      <div class="small-6 columns">
        <div class="field">
          <%= f.label :password %>
          <%= f.password_field :password %>
        </div>
        <div class="field">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation %>
        </div>
      </div>
      <div class="small-12 columns">
        <div class="actions">
          <%= f.submit class: "button" %>
        </div>
      </div>
    </fieldset>
  </div>
<% end %>