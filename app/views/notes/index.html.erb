<div class="row">
  <div class="small-12 columns">
    <h2><%= "#{pluralize(@notes.count, "note")}" %></h2>
    <table>
      <thead>
        <th><%= Note.human_attribute_name(:author) %></th>
        <th><%= Note.human_attribute_name(:rating) %></th>
        <th><%= Note.human_attribute_name(:tasting_notes) %></th>
        <th><%= Note.human_attribute_name(:created_at) %></th>
      </thead>
      <tbody>
        <% @notes.each do |n| %>
        <tr>
          <td><%= n.user %></td>
          <td><%= n.rating %></td>
          <td><%= n.tasting_notes %></td>
          <td><%= time_ago_in_words(n.created_at) %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>