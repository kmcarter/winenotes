<div class="row">
  <div class="medium-9 columns">
    <h1>Translations</h1>

    <table>
      <thead>
        <tr>
          <th>Key</th>
          <th>Value</th>
        </tr>
      </thead>
      <tbody>
        <% @translations.keys.each do |key| %>
          <tr>
            <td><%= key %></td>
            <td><%= @translations[key] %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="medium-3 columns">
    <%= render 'form' %>
  </div>
</div>